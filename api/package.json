{
  "name": "catter-api",
  "version": "1.0.0",
  "author": "clice-io",
  "description": "Catter runtime API package, for code completion and type checking, running on quickjs.",
  "type": "module",
  "files": [
    "output/types/index.d.ts",
    "output/types/capi/*"
  ],
  "typesVersions": {
    "*": {
      "*": [
        "output/types/index.d.ts",
        "output/types/capi/*"
      ]
    }
  },
  "scripts": {
    "cleanup": "xmake l os.tryrm ./output",
    "prebuild": "pnpm run cleanup",
    "bundle-js": "rollup -c ./rollup.config.js",
    "bundle-dts": "tsc --project tsconfig.app.json && api-extractor run",
    "build": "pnpm run prebuild && run-p bundle-dts bundle-js",
    "test-file": "pnpm run build && tsc --project tsconfig.test.json"
  },
  "keywords": [],
  "license": "Apache-2.0",
  "devDependencies": {
    "@microsoft/api-extractor": "^7.55.0",
    "@rollup/plugin-node-resolve": "^16.0.3",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^12.3.0",
    "npm-run-all": "^4.1.5",
    "rollup": "^4.53.2",
    "tslib": "^2.8.1",
    "typescript": "^5.9.3"
  }
}
